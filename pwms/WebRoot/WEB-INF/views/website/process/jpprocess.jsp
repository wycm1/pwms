<script type="text/javascript">
$(function(){
	$(".step").mousedown(function(){
		$(".step").each(function(){
			$(this).attr("class","step");
		});
		$(".step-detail").each(function(){
			$(this).hide();
		});
		$(this).attr("class","active step");
		var v = $(this).attr("step");
		$("[con='" + v +"']").show();
	});
});
</script>
</body>
</html>